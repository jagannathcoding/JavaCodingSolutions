class Solution {

    char dfs(Map<Character, List<Character>> adj, char curr, boolean[] vis) 
    {
        vis[curr-'a']=true;
        char minChar=curr;

          for (char neighbor : adj.getOrDefault(curr, new ArrayList<>())) 
          {
            if(!vis[neighbor-'a'])
            {
                 minChar = (char) Math.min(minChar, dfs(adj, neighbor, vis));
            }
        }

        return minChar;
    }


    public String smallestEquivalentString(String s1, String s2, String baseStr) {
        
          StringBuilder sb=new StringBuilder();
        HashMap<Character,List<Character>>adj=new HashMap<>();
        int l1=s1.length();
        for(int i=0;i<l1;i++)
        {
            char u=s1.charAt(i);
            char v=s2.charAt(i);

            if(!adj.containsKey(u))
            adj.put(u,new ArrayList<>());

            adj.get(u).add(v);

            if (!adj.containsKey(v)) 
            {
                adj.put(v, new ArrayList<>());
            }
            adj.get(v).add(u);
        }


          
            for(char ch:baseStr.toCharArray())
            {
                boolean vis[]=new boolean[26];
                sb.append(dfs(adj,ch,vis));
            }


        

        return sb.toString();

    }
}
